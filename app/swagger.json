{
    "openapi": "3.0.0",
    "info": {
      "title": "Project Explorer API",
      "description": "API for exploring projects, groups, and records.",
      "version": "1.0.0"
    },
    "servers": [
      {
        "url": "http://localhost:5000"
      }
    ],
    "paths": {
      "/projects": {
        "get": {
          "summary": "Get all projects",
          "responses": {
            "200": {
              "description": "A list of projects",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Project"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/projects/{project_id}/groups": {
        "get": {
          "summary": "Get all groups in a project",
          "parameters": [
            {
              "name": "project_id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "A list of groups",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Group"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "/projects/{project_id}/groups/{group_id}/records": {
        "get": {
          "summary": "Get all records in a group",
          "parameters": [
            {
              "name": "project_id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            },
            {
              "name": "group_id",
              "in": "path",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "A list of records",
              "content": {
                "application/json": {
                  "schema": {
                    "type": "array",
                    "items": {
                      "$ref": "#/components/schemas/Record"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "components": {
      "schemas": {
        "Project": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "Project identifier"
            },
            "name": {
              "type": "string",
              "description": "Project name"
            }
          }
        },
        "Group": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "Group identifier"
            },
            "name": {
              "type": "string",
              "description": "Group name"
            }
          }
        },
        "Record": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "description": "Record identifier"
            },
            "data": {
              "type": "object",
              "description": "Record data"
            }
          }
        }
      }
    }
  }
  